Content-Type: application/json
X-Gsvc-Caller: gtw

{
    "tid": "login",
    "phone": [
        "16049910022"
    ],
    "variable": [
        {
            "name": "code",
            "value": "123456"
        }
    ]
}

> {%
    client.test("Request executed successfully", function () {
        client.assert(response.status === 200, "Response status is not 200");
        client.assert(response.body.errCode === 0, "")
    });
%}

